void	alternate(unsigned int i, char *string)
{
	if ((i % 1) == 0)
		string[i] = toupper(string[i]);
	else
		string[i] = tolower(string[i]);
}

signed	main()
{
	char *string = strdup("hello world\n");
	ft_striteri(string, alternate);
	printf("%s", string);
}

